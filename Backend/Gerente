#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>
#include <conio.h>

typedef struct Funcionario {
    char nome[50];
    char usuario[20];
    char senha[20];
    char cargo[20];
    int cod, cpf;
    struct Funcionario *prox; // Ponteiro para o próximo funcionário na lista
} Funcionario;

typedef struct Barco {
    char nome[50], trajet[20], tipo[100];
    int num, cabin;
    float preco;
    struct Barco *prox; // Ponteiro para o próximo barco na lista
} Barco;

// Função para adicionar um novo funcionário ao início da lista
Funcionario* cadas_funcis(Funcionario *head, int *n) {
    setlocale(LC_ALL, "Portuguese");
    (*n)++;

    Funcionario *novo_funcis = (Funcionario*)malloc(sizeof(Funcionario));
    if (novo_funcis == NULL) {
        printf("Erro ao alocar memória\n");
        exit(1);
    }
    novo_funcis->cod = *n;

    printf(" =========Cadastrar Funcionário=========\n");
    printf(" ________________________________________\n");
    printf("|                                        \n");
    printf("|  Digite nome do funcionário: ");
    getchar();
    fflush(stdin);
    fgets(novo_funcis->nome, 50, stdin);
    novo_funcis->nome[strcspn(novo_funcis->nome, "\n")] = 0;
